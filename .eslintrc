{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "env": {
		"browser": true,
        "node": true,
        "es6": true
	},
    "rules": {
        "space-in-parens": ["error", "always"],
        "react/jsx-curly-spacing": [2, "always"],
        "react/sort-comp": 0,
        "arrow-body-style": 0
      },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "react-native"
    ]
  }